{
  "editor.formatOnPaste": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "typescript"
    },
    {
      "autoFix": true,
      "language": "typescriptreact"
    }
  ],
  "files.trimTrailingWhitespace": true,
  "javascript.validate.enable": false,
  "markdownlint.config": {
    "default": true,
    "MD013": {
      "code_blocks": false,
      "headings": false,
      "line_length": 80,
      "tables": false
    }
  },
  "markdownlint.ignore": [
    "node_modules/"
  ],
  "typescript.validate.enable": false
}
