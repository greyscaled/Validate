{
  "name": "@vapurrmaid/validate",
  "version": "0.3.0",
  "description": "An incredibly simple, lightweight, zero-dependency package for writing maintainable, easy-to-read validation assertions. Inspired by the Java library org.apache.commons.lang3.Validate, NodeJS assert, Chai BDD assertions and Jest matchers.",
  "keywords": [
    "assertion",
    "common",
    "utilities",
    "validate",
    "validation",
    "validator"
  ],
  "homepage": "https://github.com/vapurrmaid/Validate",
  "bugs": {
    "email": "vapurrmaid@pm.me",
    "url": "https://github.com/vapurrmaid/Validate/issues"
  },
  "license": "MIT",
  "author": {
    "email": "vapurrmaid@pm.me",
    "name": "Gregory (Grey) Barkans",
    "url": "https://github.com/vapurrmaid"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vapurrmaid/Validate"
  },
  "scripts": {
    "build": "tsc -p .",
    "build:clean": "yarn run clean:build && yarn run build",
    "build:docs": "typedoc",
    "clean": "yarn run clean:build && yarn run clean:docs && yarn run clean:jest",
    "clean:build": "rimraf dist",
    "clean:docs": "rimraf docs",
    "clean:jest": "jest --clearCache && rimraf coverage",
    "format": "prettier --print-width=80 --prose-wrap=always **/*",
    "format:check": "yarn format --check",
    "format:write": "yarn format --write",
    "lint": "eslint . --color --ext .ts src",
    "release": "cross-env ./scripts/release-it.sh",
    "release:beta": "cross-env ./scripts/release-it.sh --beta",
    "test": "jest",
    "test:coverage": "yarn run clean:jest && jest --colors --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "release-it": "^13.1.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.17.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,json,md,ts,yaml,yml}": [
      "prettier --print-width=80 --prose-wrap=always --write"
    ]
  }
}
