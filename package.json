{
  "name": "@vapurrmaid/validate",
  "version": "0.2.0",
  "description": "An incredibly simple, lightweight, zero-dependency package for writing maintainable, easy-to-read validation assertions. Inspired by the Java library org.apache.commons.lang3.Validate, NodeJS assert, Chai BDD assertions and Jest matchers.",
  "keywords": [
    "assertion",
    "common",
    "utilities",
    "validate",
    "validation",
    "validator"
  ],
  "homepage": "https://github.com/vapurrmaid/Validate",
  "bugs": {
    "email": "vapurrmaid@pm.me",
    "url": "https://github.com/vapurrmaid/Validate/issues"
  },
  "license": "MIT",
  "author": {
    "email": "vapurrmaid@pm.me",
    "name": "Gregory (Grey) Barkans",
    "url": "https://github.com/vapurrmaid"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vapurrmaid/Validate"
  },
  "scripts": {
    "build": "tsc -p .",
    "build:clean": "npm run clean:build && npm run build",
    "build:docs": "typedoc",
    "clean": "npm run clean:build && npm run clean:docs && npm run clean:jest",
    "clean:build": "rimraf dist",
    "clean:docs": "rimraf docs",
    "clean:jest": "jest --clearCache && rimraf coverage",
    "lint": "eslint . --color --ext .ts src",
    "release": "cross-env ./scripts/release-it.sh",
    "release:beta": "cross-env ./scripts/release-it.sh --beta",
    "test": "jest",
    "test:coverage": "npm run clean:jest && jest --colors --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "release-it": "^12.4.3",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typedoc": "^0.15.5",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn audit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,json,md,ts,yaml,yml}": [
      "prettier --print-width=80 --prose-wrap=always --write"
    ]
  }
}
