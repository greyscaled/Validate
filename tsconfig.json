{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    "**/__mocks__/*.ts",
    "node_modules",
    "**/*.test.ts"
  ]
}
