{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["**/__mocks__/*.ts", "node_modules", "**/*.test.ts"],
  "typedocOptions": {
    "entryPoint": "src/index.ts",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "mode": "library",
    "out": "docs",
    "readme": "none",
    "theme": "minimal",
    "toc": ["Validate"]
  }
}
